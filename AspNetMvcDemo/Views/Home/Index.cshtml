@model List<AspNetMvcDemo.Models.Product>
@{
    ViewBag.Title = "Product List";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="small-12 medium-4 columns">
        <form>
            <div class="input-group">
                <label for="name" class="input-group-label">Name:</label>
                <input type="text" name="name" id="name" class="input-group-field">
            </div>
            <fieldset class="fieldset">
                <legend>Category</legend>
                <input type="radio" name="category" id="vegetable" value="vegetable"><label for="vegetable">Vegetable</label>
                <input type="radio" name="category" id="fruit" value="fruit"><label for="fruit">Fruit</label>
            </fieldset>



            <div class="row">
                <div class="large-4 column">
                    <label for="instock">
                        In stock?
                        <input type="checkbox" name="instock" id="instock" value="true">
                    </label>
                </div>
                <div class="large-8 column">
                    <select name="store">
                        <option value="1">Store 1</option>
                        <option value="2">Store 2</option>
                        <option value="3">Store 3</option>
                        <option value="4">Store 4</option>
                    </select>
                    <input type="submit" value="Submit" class="success button"/>

                </div>

            </div>
        </form>
    </div>

    <div class="small-12 medium-8 columns">
        <table class="hover stack">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Modified)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Price)
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Category</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Modified</td>
                        <td>@item.Price</td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>Total:</th>
                    <th>@Model.Sum(item => item.Price)</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


